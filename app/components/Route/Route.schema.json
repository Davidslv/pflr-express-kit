{
  "title": "Route",
  "type": "object",
  "properties": {
    "_id": {
      "title": "Id",
      "type": "string"
    },
    "_blockType": {
      "title": "Type",
      "type": "string",
      "default": "Route",
      "enum": ["Route"]
    },
    "url": {
      "title": "URL",
      "type": "string"
    },
    "heading": {
      "title": "Heading",
      "type": "string"
    },
    "title": {
      "title": "Title",
      "type": "string"
    },
    "lede": {
      "title": "Lede",
      "type": "string"
    },
    "body": {
      "title": "Body",
      "type": "string",
      "multiline": true
    },
    "block": {
      "title": "Block",
      "type": "string",
      "blockReference": true,
      "accepts": [
        "Text",
        "RadioGroup",
        "CheckboxGroup",
        "Checkbox",
        "Date",
        "Number",
        "Password"
      ]
    },
    "blocks": {
      "title": "Blocks",
      "type": "array",
      "items": {
        "type": "string",
        "blockReference": true,
        "rejects": [
          "DefaultString",
          "ErrorRoute",
          "Option",
          "Service",
          "String",
          "Url",
          "View"
        ]
      }
    },
    "extraBlocks": {
      "title": "Extra blocks",
      "description": "Blocks which appear after the primary button",
      "type": "array",
      "items": {
        "type": "string",
        "blockReference": true,
        "accepts": [
          "Body",
          "ProgressiveDisclosure"
        ]
      }
    },
    "steps": {
      "title": "Steps",
      "type": "array",
      "items": {
        "type": "string",
        "blockReference": true,
        "accepts": [
          "Route"
        ]
      }
    },
    "_isa": {
      "title": "Based on",
      "type": "string",
      "blockReference": true,
      "accepts": [
        "View"
      ]
    },
    "depends": {
      "title": "Show when",
      "type": "array",
      "items": {
        "type": "object"
      }
    },
    "redirectConditions": {
      "title": "Custom redirect conditions",
      "type": "object"
    },
    "template": {
      "title": "Template",
      "type": "string"
    },
    "controller": {
      "title": "Custom controller",
      "type": "string"
    },
    "*notes": {
      "title": "Notes",
      "type": "string",
      "multiline": true
    }
  },
  "required": [
    "_id",
    "_blockType",
    "url",
    "heading"
  ],
  "init": [
    "url",
    "heading",
    "block",
    "blocks"
  ]
}