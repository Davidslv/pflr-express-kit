{% macro ErrorSummary(errors) %}
{% if errors %}
<div class="error-summary" role="group" aria-labelledby="error-summary-heading" tabindex="-1">

<p class="{{ govukClassname('heading-medium') }} error-summary-heading" id="error-summary-heading">
{{ getFormattedProp('error-header', 'heading') }}
</p>

<ul class="error-summary-list">
  {% for errorKey, errorValue in errors %}
<li><a href="#{{ errorKey }}">{{ getFormattedError(errorKey, {header:true}) }}{#{{errorKey}} - {{errorValue}}#}</a></li>
{% endfor %}
</ul>

</div>
{% endif %}
{% endmacro %}